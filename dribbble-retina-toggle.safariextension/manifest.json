{
	"name": "Dribbble Retina Toggle",
	"version": "0.1",
	"manifest_version": 2,
	"description": "Adds intelligent retina toggling to Dribbble. Add “_2x” to an 800×600px attachment. This extension will do the rest.",
	"icons": {
		"16":  "icon16.png",
		"48":  "icon48.png",
		"128": "icon128.png"
	},
	"update_url": "http://mikemeyer.s3.amazonaws.com/dribbble-retina-toggle/updates.xml",
	"permissions": [
		"http://dribbble.com/",
		"http://api.dribbble.com/",
		"http://dribbble.s3.amazonaws.com/",
		"tabs"
	],
	"background": {
		"scripts": ["background.js"]
	},
	"options_page": "options.html",
	"content_scripts": [
		{
			"matches": ["http://dribbble.com/shots/*"],
			"exclude_matches": ["http://dribbble.com/shots/*/attachments/*"],
			"css": ["dribbble-retina.css"],
			"js": ["jquery-1.8.1.min.js","dribbble-retina.js"]
		}
	]
}