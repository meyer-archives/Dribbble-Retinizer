{
	"name": "Dribbble Retinizer",
	"version": "0.3.2",
	"manifest_version": 2,
	"description": "Add some nifty retina-friendly functionality to Dribbble!",
	"icons": {
		"16":  "icon16.png",
		"48":  "icon48.png",
		"128": "icon128.png"
	},
	"permissions": [
		"http://dribbble.com/",
		"http://dribbble.s3.amazonaws.com/",
		"tabs",
		"webRequest"
	],
	"background": {
		"scripts": ["background.js"]
	},
	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
	"content_scripts": [
		{
			"matches": ["http://dribbble.com/shots/*"],
			"exclude_matches": [
				"http://dribbble.com/shots/*/attachments/*",
				"http://dribbble.com/shots/*/crop*",
				"http://dribbble.com/shots/*/edit*"
			],
			"css": ["dribbble-retinizer.css"],
			"js": ["jquery-1.8.1.min.js","dribbble-retinizer.js"]
		}
	]
}