{
	"name": "Dribbble Retinizer",
	"version": "0.3",
	"manifest_version": 2,
	"description": "Adds a few nifty retina features to Dribbble.",
	"icons": {
		"16":  "icon16.png",
		"48":  "icon48.png",
		"128": "icon128.png"
	},
	"update_url": "http://mikemeyer.s3.amazonaws.com/dribbble-retina-toggle/update-manifest-chrome.xml",
	"permissions": [
		"http://dribbble.com/",
		"http://dribbble.s3.amazonaws.com/",
		"tabs"
	],
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": ["http://dribbble.com/shots/*"],
			"exclude_matches": [
				"http://dribbble.com/shots/*/attachments/*",
				"http://dribbble.com/shots/*/crop*",
				"http://dribbble.com/shots/*/edit*"
			],
			"css": ["dribbble-retinizer.css"],
			"js": ["jquery-1.8.1.min.js","dribbble-retinizer.js"]
		}
	]
}